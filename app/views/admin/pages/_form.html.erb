<div class="col-sm-6">
<%= simple_form_for([:admin, @page], :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= f.error_notification %>

    
  <div class="form-group">
    <%= f.input :title, placeholder: 'Title', input_html: { class: 'form-control' } %>
  </div>
        
  <div class="form-group">
    <%= f.input :slug, placeholder: 'Slug', input_html: { class: 'form-control' } %>
  </div>
        
  <div class="form-group">
    <%= f.input :body, placeholder: 'Body', input_html: { class: 'form-control' } %>
  </div>
    
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>