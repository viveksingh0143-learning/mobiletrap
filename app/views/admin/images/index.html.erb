<h3 class="page-title"><%= pluralize(@images.size, 'image') %> stored</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Uniqid</th>
      <th>Title</th>
      <th>Capture</th>
      <th>Url</th>
      <% if current_user.admin %>
      <th>Reference</th>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.title %></td>
        <td><%= image.capture %></td>
        <td><%= image.url %></td>
        <% if current_user.admin %>
        <td><%= image.device.name %></td>
        <td><%= link_to 'Show', admin_image_path(image) %></td>
        <td><%= link_to 'Edit', edit_admin_image_path(image) %></td>
        <td><%= link_to 'Destroy', admin_image_path(image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_admin_image_path %>