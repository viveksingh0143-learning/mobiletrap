<h1>Listing devices</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Imei</th>
      <th>Serial number</th>
      <th>Devise type</th>
      <th>Os</th>
      <th>Hardware platform</th>
      <th>Platform string</th>
      <th>Total memory</th>
      <th>Total disk</th>
      <th>Free disk space</th>
      <% if current_user.admin %>
      <th>User</th>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.imei %></td>
        <td><%= device.serial_number %></td>
        <td><%= device.devise_type %></td>
        <td><%= device.os %></td>
        <td><%= device.hardware_platform %></td>
        <td><%= device.platform_string %></td>
        <td><%= device.total_memory %></td>
        <td><%= device.total_disk %></td>
        <td><%= device.free_disk_space %></td>
        <% if current_user.admin %>
        <td><%= device.user.username %></td>
        <td><%= link_to 'Show', admin_device_path(device) %></td>
        <td><%= link_to 'Edit', edit_admin_device_path(device) %></td>
        <td><%= link_to 'Destroy', admin_device_path(device), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin %>
<%= link_to 'New Device', new_admin_device_path %>
<% end %>
