<h3 class="page-title"><%= pluralize( @devices.size, 'Phone' ) %> on Dashboard &nbsp;&nbsp;&nbsp;&nbsp;
<% if current_user.admin %>
  <%= link_to 'New Device', new_admin_device_path %>
<% end %>
</h3>
<% @devices.each do |device| %>
  <div class="content-container">
    <div class="content-box">
      <h4 class="box-page-title">
        <img class="img-thumbnail" data-src="holder.js/60x60" style="width: 60px; height: 60px;">
        <%= device.name %> &dash; <%= device.devise_type %>
      </h4>
      <div class="phone-desc">
        <table class="table">
          <thead>
            <tr>
              <th>Last Update:</th>
              <th>Used Plan:</th>
              <th>Expires On:</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= device.updated_at.strftime("%d %B %Y") %></td>
              <td>Normal</td>
              <td><%= device.updated_at.strftime("%d %B %Y") %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="panel panel-success">
        <div class="panel-heading">Extracted info from this phone:</div>
        <div class="panel-body">
          <table class="table att-container">
            <tbody>
              <tr>
                <td>
                  <%= link_to(admin_logs_path) do %>
                    <%= content_tag(:i, "", class: "fa fa-phone") %> Call History <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
                <td>
                  <%= link_to(admin_contacts_path) do %>
                    <%= content_tag(:i, "", class: "fa fa-book") %> Address Book <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= link_to(admin_messages_path) do %>
                    <%= content_tag(:i, "", class: "fa fa-comment") %> SMS History <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
                <td>
                  <%= link_to(admin_locations_path) do %>
                    <%= content_tag(:i, "", class: "fa fa-map-marker") %> GPS Location <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= link_to(admin_apps_path) do %>
                    <%= content_tag(:i, "", class: "fa fa-briefcase") %> Installed App <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
                <td>
                  <%= link_to("#") do %>
                    <%= content_tag(:i, "", class: "fa fa-globe") %> GPS Notification <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= link_to("#") do %>
                    <%= content_tag(:i, "", class: "fa fa-camera") %> Images <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
                <td>
                  <%= link_to("#") do %>
                    <%= content_tag(:i, "", class: "fa fa-film") %> Video File <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= link_to("#") do %>
                    <%= content_tag(:i, "", class: "fa fa-music") %> Audio File <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
                <td>
                  <%= link_to("#") do %>
                    <%= content_tag(:i, "", class: "fa fa-comments") %> WhatsApp <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= link_to("#") do %>
                    <%= content_tag(:i, "", class: "fa fa-globe") %> Browser History <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
                <td>
                  <%= link_to("#") do %>
                    <%= content_tag(:i, "", class: "fa fa-envelope") %> Email History <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= link_to("#") do %>
                    <%= content_tag(:i, "", class: "fa fa-bookmark") %> Bookmarks <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
                <td>
                  <%= link_to("#") do %>
                    <%= content_tag(:i, "", class: "fa fa-tasks") %> Events <%= content_tag(:span, "9999", class: "att-count") %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="content-box-bottom-content">
        <table class="table att-container">
          <tbody>
            <tr>
              <td><span class="att-label">OS:</span><%= device.os %></td>
              <td><span class="att-label">Hardware Platform:</span><%= device.hardware_platform %></td>
              <td><span class="att-label">Platform String:</span><%= device.platform_string %></td>
            </tr>
            <tr>
              <td><span class="att-label">Total Memory:</span><%= device.total_memory %></td>
              <td><span class="att-label">Total Disk Space:</span><%= device.total_disk %></td>
              <td><span class="att-label">Free Disk Space:</span><%= device.free_disk_space %></td>
            </tr>
            <tr>
              <td><span class="att-label">Imei:</span><%= device.imei %></td>
              <td><span class="att-label">Serial Number:</span><%= device.serial_number %></td>
              <td>&nbsp;</td>
            </tr>
            <% if current_user.admin %>
              <tr>
                <td><span class="att-label">User:</span><%= device.user.username %></td>
                <td colspan="2">
                  <%= link_to 'Show', admin_device_path(device) %><span class="n-space"></span>
                  <%= link_to 'Edit', edit_admin_device_path(device) %><span class="n-space"></span>
                  <%= link_to 'Destroy', admin_device_path(device), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

